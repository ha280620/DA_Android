<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">

        <LinearLayout
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                tools:ignore="MissingConstraints"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/Menu_icon"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/Menu_icon"
                    app:srcCompat="@drawable/icon_ellipse" />

                <ImageView
                    android:id="@+id/UserImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/userimage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserImage"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/helloUser"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>
<!--phần đầu-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_user"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/Today"
                            android:textColor="@color/black"
                            android:textSize="25dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/custom_medicine"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/LinearLichKham1"
                                app:srcCompat="@drawable/icon_medicine" />

                            <LinearLayout
                                android:id="@+id/LinearLichKham1"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:text="@string/PillReminder"
                                    android:textColor="@color/black"
                                    android:textSize="25dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Pill"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@id/LinearLichKham1"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icon_left" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/custom_medicine"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/LinearLichKham2"
                                app:srcCompat="@drawable/icon_medicine" />

                            <LinearLayout
                                android:id="@+id/LinearLichKham2"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:text="@string/PillReminder"
                                    android:textColor="@color/black"
                                    android:textSize="25dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Pill"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@id/LinearLichKham2"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icon_left" />

                        </RelativeLayout>

                        <TextView
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/viewall"
                            android:textSize="17dp" />

                    </LinearLayout>


<!--                    thuốc-->

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.constraint.ConstraintLayout
                            android:orientation="horizontal"
                            android:background="@drawable/custom_medical1"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/User_constraint1"
                                app:layout_constraintLeft_toRightOf="@id/cactus1"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="20dp"
                                android:orientation="vertical">

                                <android.support.constraint.Guideline
                                    android:id="@+id/glHomeUser1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.5"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/yougood"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    app:layout_constraintBottom_toTopOf="@id/glHomeUser1"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <Button
                                    android:id="@+id/DoChiSoNgay"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/custom_button"
                                    android:text="@string/checkbmi"
                                    android:textColor="#fff"
                                    android:textSize="20dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/glHomeUser1"/>

                            </android.support.constraint.ConstraintLayout>


                            <ImageView
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/User_constraint1"
                                android:id="@+id/cactus1"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_margin="20dp"
                                app:srcCompat="@drawable/icon_index" />
                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>
<!--        đo chỉ số-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/urneed"
                            android:textColor="@color/black"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_weight="9"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_margin="10dp"
                                android:layout_weight="3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">

                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/hososuckhoe" />


                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/khaibaoyte" />

                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/chungnhantiemchung" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_margin="10dp"
                                android:layout_weight="3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">

                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/baohiemyte" />

                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/datlichuongthuoc" />

                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/datlichkham" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_margin="10dp"
                                android:layout_weight="3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">

                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/chisosuckhoecuaban" />

                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/taomaqr" />

                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/tuvanbacsi" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >



                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
<!--                    bạn cần gì-->

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.constraint.ConstraintLayout
                            android:orientation="horizontal"
                            android:background="@drawable/custom_medical1"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/User_constraint2"
                                app:layout_constraintRight_toLeftOf="@id/cactus2"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="20dp"
                                android:orientation="vertical">

                                <android.support.constraint.Guideline
                                    android:id="@+id/glHomeUser2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.5"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/notkbyt"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    app:layout_constraintBottom_toTopOf="@id/glHomeUser2"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <Button
                                    android:id="@+id/KhaiBaoNgay"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/custom_button"
                                    android:text="@string/kbnow"
                                    android:textColor="#fff"
                                    android:textSize="20dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/glHomeUser2"/>

                            </android.support.constraint.ConstraintLayout>


                            <ImageView
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/User_constraint2"
                                android:id="@+id/cactus2"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_margin="20dp"
                                app:srcCompat="@drawable/icon_index1" />
                        </android.support.constraint.ConstraintLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="50dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif-black"
                            android:text="Ứng dụng khác"
                            android:textColor="@color/black"
                            android:textSize="25dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/custom_medicine"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/LinearDatKham"
                                app:srcCompat="@drawable/icon_datkham" />

                            <LinearLayout
                                android:id="@+id/LinearDatKham"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:text="@string/setappointment"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/black"
                                    android:textSize="25dp" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icon_left" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/custom_medicine"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/LinearHoSoSucKhoe"
                                app:srcCompat="@drawable/icon_hososuckhoe" />

                            <LinearLayout
                                android:id="@+id/LinearHoSoSucKhoe"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:text="@string/personalhealthinfo"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/black"
                                    android:textSize="25dp" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icon_left" />

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>